{
	"name": "empress",
	"displayName": "empress",
	"description": "Confine your Liberty",
	"version": "1.0.2",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"author": {
		"name": "Reinier van Leussen",
		"email": "info@rvlstudio.com",
		"url": "https://rvlstudio.com"
	},
	"publisher": "rvlstudio",
	"icon": "media/logo_square.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
	},
	"repository": {
		"url": "https://github.com/reiniervl/empress.git",
		"type": "git"
	},
	"license": "(MIT OR Apache-2.0)",
	"activationEvents": [
		"onView:empressView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "empress",
				"properties": {
					"empress.openlibertyBaseDirectory": {
						"type": [
							"string"
						],
						"description": "path to the folder where openliberty is installed ('*/wlp/')"
					}
				}
			}
		],
		"commands": [
			{
				"command": "empress.start",
				"title": "start",
				"icon": {
					"dark": "media/dark/play.svg",
					"light": "media/light/play.svg"
				}
			},
			{
				"command": "empress.stop",
				"title": "stop",
				"icon": {
					"dark": "media/dark/stop.svg",
					"light": "media/light/stop.svg"
				}
			},
			{
				"command": "empress.restart",
				"title": "restart",
				"icon": {
					"dark": "media/dark/refresh.svg",
					"light": "media/light/refresh.svg"
				}
			},
			{
				"command": "empress.refresh",
				"title": "refresh"
			},
			{
				"command": "empress.openFile",
				"title": "open"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "empressView",
					"name": "empress"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "empress.refresh",
					"when": "view == empressView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "empress.start",
					"when": "viewItem == notrunning",
					"group": "inline"
				},
				{
					"command": "empress.stop",
					"when": "viewItem == running",
					"group": "inline"
				},
				{
					"command": "empress.restart",
					"when": "viewItem == running",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
